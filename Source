  <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-auth.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-database.js"></script>

  <style>
    body {
      font-family: Arial;
      background: #f2f2f2;
      margin: 0;
      text-align: center;
    }
    h1 {
      background: #002147;
      color: white;
      padding: 20px;
      margin: 0;
    }
    .box {
      background: white;
      margin: 20px;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px gray;
    }
    input, textarea {
      width: 80%;
      padding: 10px;
      margin: 5px;
    }
    button {
      padding: 8px 15px;
      background: #002147;
      color: white;
      border: none;
      cursor: pointer;
      margin: 5px;
    }
